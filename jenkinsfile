pipeline {
    agent any
    environment {
        VERSION = "0.0.1"
        RELEASE_VERSION = "D.1"
        VENV_DIR=".venv"
    }
    stages {
        stage('First Stage') {
            steps {
                sh '''
                git version
                python3 --version
                ls
                '''
            }
        }

        stage('Setup Python Environment') {
            steps {
                sh 'ls'
                dir('./python_code') {
                sh 'ls'
                sh '''
                #!/bin/bash
                set -e
                echo "Creating virtual environment..."
                python3 -m venv $VENV_DIR
                source $VENV_DIR/bin/activate
                pip install --upgrade pip
                pip install -r requirements.txt
                '''
                }
            }
        }


        stage('Unit Tests') {
            steps {
                dir('./python_code') {
                sh 'ls'
                sh 'source .venv/bin/activate'
                sh 'echo "Venv has been activated"'
                sh '''
                #!/bin/bash
                set -e
                echo "Executing Unit Tests..."
                pytest
                '''
                }
            }
        }
    }

    post {
        success {
            echo 'Everything went great.'
        }
        failure {
            echo 'Woopsie-Daisy!'
        }
    }

}