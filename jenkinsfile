pipeline {
    agent any
    environment {
        VERSION = "0.0.1"
        RELEASE_VERSION = "D.1"
    }
    stages {
        stage('First Stage') {
            steps {
                sh '''
                git version
                python --version
                ls
                '''
            }
        }

        stage('Unit Tests') {
            steps {
                sh '''
                echo "Executing Unit Tests..."
                pytest
                '''
            }
        }
    }

    post {
        success {
            echo 'Everything went great.'
        }
        failure {
            echo 'Woopsie-Daisy!'
        }
    }

}